<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/comment_title_bar_layout"
        layout="@layout/layout_bar_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/white">

        <TextView
            android:id="@+id/row_1_title"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="手机号"
            android:textColor="@color/font_color_3"
            android:textSize="@dimen/text_size_m" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/row_1_title"
            android:background="@android:color/transparent"
            android:hint="请输入手机号"
            android:textColorHint="@color/font_color_4"
            android:inputType="phone"
            android:textColor="@color/font_color_4"
            android:textSize="@dimen/text_size_m" />

        <View
            style="@style/magic_h_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/white">

        <TextView
            android:id="@+id/row_2_title"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="密码"
            android:textColor="@color/font_color_3"
            android:textSize="@dimen/text_size_m"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/row_2_title"
            android:background="@android:color/transparent"
            android:hint="请输入密码"
            android:textColorHint="@color/font_color_4"
            android:inputType="textPassword"
            android:textColor="@color/font_color_4"
            android:textSize="@dimen/text_size_m" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="获取随机密码"
            android:textColor="@color/font_color_4" />

        <View
            style="@style/magic_h_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/glo_nav_bar_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:text="忘记密码"
        android:layout_marginTop="10dp"
        android:textColor="@color/font_color_4"

        android:textSize="@dimen/text_size_m" />
</LinearLayout>