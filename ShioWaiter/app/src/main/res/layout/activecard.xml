<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentrel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glo_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/comment_title_bar_layout"
        layout="@layout/layout_bar_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:id="@+id/scanResultarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_title_bar_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="卡号:2012012093"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_l" />
            <TextView
                android:id="@+id/cardmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardnum"
                android:text="余额:$0"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_l"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_delpic"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"/>

            <View style="@style/magic_h_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/captureroot"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/scan_bg_color"
            android:visibility="gone">

            <SurfaceView
                android:id="@+id/capture_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/left_mask"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/scan_bg"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/right_mask"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/scan_bg" />

                <RelativeLayout
                    android:id="@+id/capture_crop_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@id/right_mask"
                    android:layout_toRightOf="@id/left_mask"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/capture_scan_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/scanning_line" />

                    <com.cqgk.clerk.view.scan.TagetImageView
                        android:id="@+id/scan_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="请扫描未使用会员卡上的二维码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_m"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/row_1_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="会员姓名"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/row_1_title"
                android:background="@android:color/transparent"
                android:hint="请输入会员姓名"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />

        </RelativeLayout>

        <View style="@style/magic_h_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/row_2_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="会员手机号"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/row_2_title"
                android:background="@android:color/transparent"
                android:text="请输入11位手机号码"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />

        </RelativeLayout>

        <View style="@style/magic_h_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/row_3_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="会员身份证号"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />

            <EditText
                android:id="@+id/row_3_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/row_3_title"
                android:background="@android:color/transparent"
                android:hint="请输入15-18位身份证号码"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />


        </RelativeLayout>

        <View style="@style/magic_h_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/row_4_title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="密码"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />

            <EditText
                android:id="@+id/row_4_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/row_4_title"
                android:background="@android:color/transparent"
                android:hint="请输入密码"
                android:inputType="numberPassword"
                android:textColor="@color/font_color_3"
                android:textSize="@dimen/text_size_m" />


        </RelativeLayout>

        <View style="@style/magic_h_line" />
    </LinearLayout>


</RelativeLayout>